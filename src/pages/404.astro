---
import RootLayout from '@/components/layouts/RootLayout.astro'
import Navbar from '@/components/shared/Navbar.astro'
import Footer from '@/components/sections/shared/Footer.astro'
import Button from '@/components/shared/Button.astro'
---

<RootLayout title='Page not found' description='Oops, this page does not exist'>
  <Navbar showLine />
  <main class='pt-[5.625rem] flex grow px-6 md:px-10 lg:pt-24'>
    <article class='m-auto flex flex-col gap-6 items-center w-full my-24 max-w-[28rem]'>
      <h1 class='text-orange text-9xl font-extrabold'>404</h1>
      <p class='text-[0.938rem] text-center text-dark/50 font-medium'>
        Oops, this page does not exist or has been moved. You can go back to the home page or
        contact us if you think this is an error.
      </p>
      <Button href='/'>Go back home</Button>
    </article>
  </main>
  <Footer />
</RootLayout>
