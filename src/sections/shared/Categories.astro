---
import Button from '@/components/Button.astro'
import categories from '@/constants/categories.json'
---

<section class='grid gap-4 md:md:grid-cols-3 md:gap-2.5 lg:gap-[1.875rem]'>
  {
    categories.map(({ image, name, slug }) => (
      <div class='relative'>
        <img
          class='absolute h-36 left-1/2 -translate-x-1/2'
          src={image}
          alt={`${name} category thumbnail`}
        />

        <div class='mt-[3.25rem] rounded-lg h-[10.313rem] w-full flex flex-col gap-4 items-center pb-[1.375rem] bg-[#F1F1F1]'>
          <h3 class='mt-auto uppercase font-bold text-[0.938rem]'>{name}</h3>
          <Button variant='text' href={`/category/${slug}`}>
            Shop
          </Button>
        </div>
      </div>
    ))
  }
</section>
