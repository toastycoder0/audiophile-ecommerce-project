---
import clsx from 'clsx'
import ArrowRight from '@/components/icons/ArrowRight.astro'

interface Props {
  id?: string
  variant?: 'default' | 'outline' | 'text' | 'dark'
  href?: string
  class?: string
  full?: boolean
}

const styles = {
  default:
    'px-[1.875rem] py-[0.938rem] border-[1px] border-orange bg-orange text-white hover:border-low-orange hover:bg-low-orange focus-visible:bg-low-orange focus-visible:border-low-orange',
  outline:
    'px-[1.875rem] py-[0.938rem] border-[1px] border-dark text-dark hover:bg-black hover:text-white focus-visible:bg-black focus-visible:text-white',
  text: 'text-[#808080] hover:text-orange focus-visible:text-orange',
  dark: 'px-[1.875rem] py-[0.938rem] border-[1px] bg-dark text-white border-dark hover:bg-gray hover:border-gray focus-visible:bg-gray focus-visible:border-gray'
}

const { variant = 'default', href, class: className, id, full } = Astro.props

const Tag = href ? 'a' : 'button'

const props = {
  id,
  class: clsx(
    'text-sm uppercase text-center flex items-center justify-center gap-3 font-bold tracking-[1px] duration-200',
    full ? 'w-full' : 'w-fit',
    styles[variant],
    className
  ),
  ...(href && { href })
}
---

<Tag {...props}>
  <slot />{variant === 'text' && <ArrowRight />}
</Tag>
